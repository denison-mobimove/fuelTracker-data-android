<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/main_activity_padd_top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_info_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fueltracker_filter_shell_icon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/info_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible">

        <EditText
            android:id="@+id/editText_street"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="@string/info_street_name"
            android:nextFocusDown="@+id/editText_street"
            android:imeOptions="actionNext"
            android:singleLine="true" />

        <EditText
            android:id="@+id/editText_town"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/edtiText_spacing"
            android:hint="@string/info_town_name"
            android:imeOptions="actionNext"
            android:nextFocusForward="@+id/editText_phone_number"
            android:nextFocusDown="@+id/editText_town"
            android:singleLine="true" />

        <EditText
            android:id="@+id/editText_phone_number"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/edtiText_spacing"
            android:hint="@string/info_phone_name"
            android:singleLine="true" />

        <RelativeLayout
            android:id="@+id/next_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/edtiText_spacing"
            android:background="#00BCD4"
            android:elevation="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="NEXT"
                android:textSize="25sp" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
